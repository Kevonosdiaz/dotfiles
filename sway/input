# Laptop Stuff
input "type:touchpad" {
    dwt enabled
    tap enabled
    natural_scroll enabled
    click_method clickfinger
}

input type:pointer scroll_factor 1.0

input * {
    repeat_rate 50
    repeat_delay 350
    accel_profile "flat" # No mouse acceleration
}

# Caps is ctrl
input "type:keyboard" {
    xkb_layout us
    xkb_options ctrl:nocaps
}

focus_follows_mouse no
